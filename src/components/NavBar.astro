---
import Avatar from '@icons/avatar-girl-svgrepo-com.svg';
import MOut from '@icons/money-send-svgrepo-com.svg';
import { Image } from 'astro:assets';
const { isProduct, icon = Avatar, productPage = false } = Astro.props;
---

<nav class='flex h-[96px] items-center justify-between px-4'>
  <a href='/'>Home</a>
  <ul class='flex gap-1'>
    <li class={isProduct ? 'bg-gray-200' : 'bg-transparent'}><a href='/'>Product</a></li>
    <li class={isProduct ? 'bg-transparent' : 'bg-gray-200'}><a href='/about-product'>About</a></li>
  </ul>
  {
    !productPage ? (
      <Image src={icon} alt='logo' width={30} height={30} class:list={['rounded-full']} transition:name='icon' />
    ) : (
      <div class="bg-gray-50 rounded-full">
      <Image src={MOut} alt='logo' width={30} height={30} class:list={['rounded-full']} transition:name='icon' />
      </div>
    )
  }
</nav>

<style>
  li {
    @apply flex h-8 items-center rounded-full px-4 text-xs font-semibold text-gray-900;
  }
</style>
