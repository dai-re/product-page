{
  "plugins": ["prettier-plugin-astro","prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["*.astro"],
      "options": { "parser": "astro" }
    }
  ],
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "printWidth": 120,
  "trailingComma": "none",
  "semi": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "jsxSingleQuote": true,
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "insertPragma": false
}